# Docker Development Environment Configuration
# Copy this file to .env for dockerized development

# =============================================================================
# DJANGO BACKEND CONFIGURATION
# =============================================================================

# Django Core Settings
DEBUG=true
SECRET_KEY=django-insecure-development-secret-key-change-in-production-2024
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,testserver

# Database Configuration - Use PostgreSQL in Docker
USE_POSTGRES=true
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/realestate

# PostgreSQL Configuration
POSTGRES_DB=realestate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

# Enable Celery for development with Redis
USE_CELERY=true
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for Celery and caching
REDIS_URL=redis://redis:6379/0

