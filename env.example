# Real Estate Agent Environment Configuration
# Copy this file to .env and modify as needed

# Django Backend
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DATABASE_URL=postgresql://broker_user:broker_pass@postgres:5432/realestate_broker

# Redis (for Celery)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (for alerts)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=alerts@yourcompany.com

# WhatsApp (for alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MCP_YAD2_URL=http://localhost:8001
NEXT_PUBLIC_MCP_RAMI_URL=http://localhost:8002
NEXT_PUBLIC_MCP_GIS_URL=http://localhost:8003
NEXT_PUBLIC_MCP_GOV_URL=http://localhost:8004

# MCP Server Ports
MCP_YAD2_PORT=8001
MCP_RAMI_PORT=8002
MCP_GIS_PORT=8003
MCP_GOV_PORT=8004

# Optional: External API Keys
# YAD2_API_KEY=your_yad2_api_key
# RAMI_API_KEY=your_rami_api_key
# GIS_API_KEY=your_gis_api_key
